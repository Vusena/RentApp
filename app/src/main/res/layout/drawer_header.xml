<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_header_layout"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/user_avatar_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="@string/user_avatar_text"
        android:src="@drawable/ic_account_circle_white_96dp" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/default_user_text"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@android:color/white" />

</LinearLayout>